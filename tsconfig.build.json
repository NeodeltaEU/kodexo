{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true
  },
  "exclude": ["node_modules", "./node_modules", "./node_modules/*"]
}
