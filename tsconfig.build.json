{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2018",
    "sourceMap": true,
    "strict": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": ["node_modules", "./node_modules", "./node_modules/*"]
}
