{
  "name": "@kodexo/config",
  "version": "1.0.0-dev.15",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "repository": "https://github.com/Uminily/kodexo",
  "scripts": {
    "clean": "rimraf ./dist && rimraf tsconfig.build.tsbuildinfo",
    "build": "yarn clean && tsc -b tsconfig.build.json",
    "test": "jest --runInBand --colors --forceExit"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testTimeout": 7000,
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@tinyhttp/app": "^1.3.11",
    "@types/jest": "^28.1.1",
    "@types/object-path": "^0.11.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@kodexo/common": "^1.0.0-dev.15",
    "@kodexo/injection": "^1.0.0-dev.15",
    "@kodexo/logger": "^1.0.0-dev.15",
    "object-path": "^0.11.5",
    "type-fest": "^1.2.2"
  },
  "gitHead": "3341d44d2cc6d1a4e6b993d4df43a23a0df3175a"
}
