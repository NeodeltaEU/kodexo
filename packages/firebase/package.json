{
  "name": "@kodexo/firebase",
  "version": "1.0.0-dev.15",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "repository": "https://github.com/Uminily/kodexo",
  "scripts": {
    "clean": "rm -rf build",
    "watch": "tsc -b tsconfig.build.json --watch",
    "build": "rimraf ./dist && tsc -b tsconfig.build.json",
    "test": "jest --runInBand --colors --forceExit",
    "test:start": "ts-node-dev ./tests/mocks/bootstrap.ts"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testTimeout": 7000,
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^10.8.0",
    "ts-node-dev": "^2.0.0",
    "type-fest": "^2.1.0",
    "typescript": "^4.1.4"
  },
  "dependencies": {
    "@kodexo/common": "^1.0.0-dev.15",
    "@kodexo/config": "^1.0.0-dev.15",
    "@kodexo/errors": "^1.0.0-dev.15",
    "@kodexo/injection": "^1.0.0-dev.15",
    "firebase-admin": "^10.2.0"
  }
}
