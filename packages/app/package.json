{
  "name": "@kodexo/app",
  "version": "1.0.0-dev.26",
  "license": "MIT",
  "repository": "https://github.com/Uminily/kodexo",
  "scripts": {
    "clean": "rm -rf build",
    "watch": "tsc -b tsconfig.build.json --watch",
    "build": "rimraf ./dist && tsc -b tsconfig.build.json",
    "test": "jest --runInBand --colors",
    "test:watch": "jest --runInBand --colors --watch",
    "test:start": "ts-node-dev ./tests/mocks/start.ts"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testTimeout": 7000,
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/jest": "^28.1.1",
    "@types/pino-http": "^5.4.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "expect-cookies": "^0.2.0",
    "jest": "^28.1.1",
    "openapi-types": "^12.0.0",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "supertest-fetch": "^1.4.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.3.0",
    "type-fest": "^2.13.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.9.0",
    "@kodexo/common": "^1.0.0-dev.25",
    "@kodexo/config": "^1.0.0-dev.25",
    "@kodexo/errors": "^1.0.0-dev.18",
    "@kodexo/injection": "^1.0.0-dev.18",
    "@kodexo/logger": "^1.0.0-dev.25",
    "@kodexo/openapi": "^1.0.0-dev.26",
    "@kodexo/queueing": "^1.0.0-dev.25",
    "@tinyhttp/app": "^1.3.11",
    "@tinyhttp/cors": "^1.1.7",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "globby": "^11.0.2",
    "normalize-path": "^3.0.0",
    "normalize-url": "^7.0.0",
    "pretty-error": "^4.0.0",
    "regexparam": "^2.0.0"
  },
  "gitHead": "3341d44d2cc6d1a4e6b993d4df43a23a0df3175a"
}
