{
  "name": "@kodexo/crud",
  "version": "1.0.0-dev.45",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "repository": "https://github.com/Uminily/kodexo",
  "scripts": {
    "build": "rimraf ./dist && tsc -b tsconfig.build.json",
    "watch": "tsc -b tsconfig.build.json --watch",
    "start:db": "docker-compose up -d",
    "test": "jest --runInBand --colors --forceExit",
    "test:watch": "jest --runInBand --colors --verbose --forceExit --watch",
    "test:coverage": "jest --coverage --runInBand --colors --verbose --forceExit",
    "test:start": "ts-node-dev ./tests/mocks/start.ts"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testTimeout": 7000,
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.2.0",
    "@kodexo/app": "^1.0.0-dev.45",
    "@types/jest": "^28.1.1",
    "@types/pluralize": "^0.0.29",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "type-fest": "^2.13.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@kodexo/common": "^1.0.0-dev.45",
    "@kodexo/errors": "^1.0.0-dev.45",
    "@kodexo/mikro-orm": "^1.0.0-dev.45",
    "@kodexo/openapi": "^1.0.0-dev.45",
    "@mikro-orm/core": "^5.2.0",
    "@mikro-orm/postgresql": "^5.2.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.13.2",
    "pluralize": "^8.0.0",
    "query-string": "^7.0.1",
    "uuid": "^8.3.2"
  },
  "gitHead": "3341d44d2cc6d1a4e6b993d4df43a23a0df3175a"
}
